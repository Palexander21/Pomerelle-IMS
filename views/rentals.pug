extends layout

block content
    button.btn.btn-primary(type='button' data-toggle='modal' data-target='#rentalModalCenter')
        | Launch demo modal
    #rentalModalCenter.modal.fade(tabindex='-1' role='dialog' aria-labelledby='exampleModalCenterTitle' aria-hidden='true')
        .modal-dialog.modal-dialog-centered(role='document')
            .modal-content
                .modal-header
                    h5#exampleModalLongTitle.modal-title New Rental
                    button.close(type='button' data-dismiss='modal' aria-label='Close')
                        span(aria-hidden='true') &times;
                .modal-body
                    form
                        .form-group
                            .form-row
                                .col-md-6
                                    .form-label-group
                                        input#firstName.form-control(type='text' placeholder='First name' required='required' autofocus='autofocus')
                                        label(for='firstName') First name
                                .col-md-6
                                    .form-label-group
                                        input#lastName.form-control(type='text' placeholder='Last name' required='required')
                                        label(for='lastName') Last name
                        .form-group
                            .form-label-group
                                input#inputEmail.form-control(type='email' placeholder='Email address' required=false)
                                label(for='inputEmail') Email address
                        .form-group
                            .form-row
                                .col-md-6
                                    .form-label-group
                                        input#equipment.form-control(type='text' placeholder='Equipment' required='required')
                                        label(for='equipment') Equipment
                                .col-md-6
                                    .form-label-group
                                        input#confirmPassword.form-control(type='password' placeholder='Confirm password' required='required')
                                        label(for='confirmPassword') Confirm password
                        a.btn.btn-primary.btn-block(href='login') Register
                    .text-center
                        a.d-block.small.mt-3(href='login') Login Page
                        a.d-block.small(href='forgot-password') Forgot Password?
                .modal-footer
                    button.btn.btn-secondary(type='button' data-dismiss='modal') Close
                    button.btn.btn-primary(type='button') Save changes



