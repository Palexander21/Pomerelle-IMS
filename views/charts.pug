extends layout

block content
    ol.breadcrumb
        li.breadcrumb-item
            a(href='#') Dashboard
        li.breadcrumb-item.active Charts
    // Area Chart Example
    .card.mb-3
        .card-header
            i.fas.fa-chart-area
            |             Area Chart Example
        .card-body
            canvas#myAreaChart(width='100%' height='30')
        .card-footer.small.text-muted Updated yesterday at 11:59 PM
    .row
        .col-lg-8
            .card.mb-3
                .card-header
                    i.fas.fa-chart-bar
                    |                 Bar Chart Example
                .card-body
                    canvas#myBarChart(width='100%' height='50')
                .card-footer.small.text-muted Updated yesterday at 11:59 PM
        .col-lg-4
            .card.mb-3
                .card-header
                    i.fas.fa-chart-pie
                    |                 Pie Chart Example
                .card-body
                    canvas#myPieChart(width='100%' height='100')
                .card-footer.small.text-muted Updated yesterday at 11:59 PM
    p.small.text-center.text-muted.my-5
        em More chart examples coming soon...

block scripts
    script(src='js/demo/chart-area-demo.js')
    script(src='js/demo/chart-bar-demo.js')
    script(src='js/demo/chart-pie-demo.js')
