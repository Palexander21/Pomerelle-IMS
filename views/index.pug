extends layout

block content
    ol.breadcrumb
        li.breadcrumb-item
            a(href='#') Dashboard
    .row
        .col-xl-3.col-sm-6.mb-3
            a.card.text-white.bg-primary.o-hidden.h-100(href='rentals')
                .card-body
                    .card-body-icon
                        i.fas.fa-fw.fa-cash-register
                    .mr-5 Start New Rental
                //a.card-footer.text-white.clearfix.small.z-1(href='#')
                //    span.float-left View Details
                //    span.float-right
                //i.fas.fa-angle-right
        .col-xl-3.col-sm-6.mb-3
            .card.text-white.bg-warning.o-hidden.h-100
                .card-body
                    .card-body-icon
                        i.fas.fa-fw.fa-list
                    .mr-5 11 New Tasks!
                a.card-footer.text-white.clearfix.small.z-1(href='#')
                    span.float-left View Details
                    span.float-right
                        i.fas.fa-angle-right
        .col-xl-3.col-sm-6.mb-3
            .card.text-white.bg-success.o-hidden.h-100
                .card-body
                    .card-body-icon
                        i.fas.fa-fw.fa-shopping-cart
                    .mr-5 123 New Orders!
                a.card-footer.text-white.clearfix.small.z-1(href='#')
                    span.float-left View Details
                    span.float-right
                        i.fas.fa-angle-right
        .col-xl-3.col-sm-6.mb-3
            .card.text-white.bg-danger.o-hidden.h-100
                .card-body
                    .card-body-icon
                        i.fas.fa-fw.fa-life-ring
                    .mr-5 13 New Tickets!
                a.card-footer.text-white.clearfix.small.z-1(href='#')
                    span.float-left View Details
                    span.float-right
                        i.fas.fa-angle-right
    // Area Chart Example
    .card.mb-3
        .card-header
            i.fas.fa-chart-area
            |             Area Chart Example
        .card-body
            canvas#myAreaChart(width='100%' height='30')
        .card-footer.small.text-muted.date-updated Updated yesterday at 11:59 PM
