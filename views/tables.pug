extends layout

block content
    ol.breadcrumb
        li.breadcrumb-item
            a(href='#') Dashboard
        li.breadcrumb-item.active Tables
    // DataTables Example
    .card.mb-3
        .card-header
            i.fas.fa-table
            |             Data Table Example
        .card-body
            .table-responsive
                table#dataTable.table.table-bordered(width='100%' cellspacing='0')
                    thead
                        tr
                            th Name
                            th Username
                            th Hire Date
                            th Position
                    tbody
                        each user in users
                            tr
                                td #{user.firstName} #{user.lastName}
                                td #{user.username}
                                td #{user.startDate}
                                td #{user.position}
        .card-footer.small.text-muted.date-updated Updated yesterday at 11:59 PM
    p.small.text-center.text-muted.my-5
        em More table examples coming soon...
