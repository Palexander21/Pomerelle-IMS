extends layout

block content
    ol.breadcrumb
        li.breadcrumb-item
            a(href='/') Dashboard
        li.breadcrumb-item.active Tables
    .card.mb-3
        .card-header
            nav
                #nav-tab.nav.nav-tabs(role='tablist')
                    a#nav-equipment-tab.nav-item.nav-link.active(data-toggle='tab' href='#nav-equipment' role='tab' aria-controls='nav-equipment' aria-selected='false') Equipment
                    a#nav-employee-tab.nav-item.nav-link.disabled(data-toggle='tab' href='#nav-employee' role='tab' aria-controls='nav-employee' aria-selected='true') Employees
            #nav-tabContent.tab-content.disabled
                #nav-employee.tab-pane.fade(role='tabpanel' aria-labelledby='nav-employee-tab').disabled
                    .card-body
                        .table-responsive
                            table#employeeDataTable.table.table-bordered.data-table(width='100%' cellspacing='0')
                                thead
                                    tr
                                        th Name
                                        th Username
                                        th Hire Date
                                        th Position
                                tbody
                                    each user in users
                                        tr
                                            td #{user.firstName} #{user.lastName}
                                            td #{user.username}
                                            td #{user.startDate}
                                            td #{user.position}
                        button#employeeAdd.btn.btn-primary.table-btn Add
                        button#employeeDelete.btn.btn-danger.table-btn Delete
                    .card-footer.small.text-muted.date-updated Updated yesterday at 11:59 <PM></PM>
                #nav-equipment.tab-pane.fade.show.active(role='tabpanel' aria-labelledby='nav-equipment-tab')
                    .card-body
                        .table-responsive
                            table#equipmentDataTable.table.table-bordered.data-table(width='100%' cellspacing='0')
                                thead
                                    tr
                                        th Item
                                        th Last Used
                                        th Last Tuned
                                        th Size
                                        th UPC
                                tbody
                                    each item in equipment
                                        tr
                                            td #{item.type}
                                            td #{item.last_used}
                                            td #{item.last_tune}
                                            td #{item.size}
                                            td #{item.upc}
                        button#equipmentAdd.btn.btn-primary.table-btn(type='button' data-toggle='modal' data-target='#equipmentModalCenter') Add
                        button#equipmentDelete.btn.btn-danger.table-btn.disabled Delete
                    .card-footer.small.text-muted.date-updated Updated yesterday at 11:59 PM

        #equipmentModalCenter.modal.fade(tabindex='-1' role='dialog' aria-labelledby='addEquipmentModal' aria-hidden='true' data-backdrop='static')
            .modal.modal-dialog.modal-dialog-centered(role='document')
                .modal-content
                    .modal-header
                        h5#exampleModalLongTitle.modal-title New Equipment
                        button.close(type='button' data-dismiss='modal' aria-label='Close')
                            span(aria-hidden='true') &times;
                    .modal-body
                        form(method='POST' action='/tables')
                            .form-group
                                .form-row
                                    .col-md-6
                                        .form-label-group
                                            select#type.custom-select(name='type')
                                                option(selected='') -Type-
                                                option(value='ski') Skis
                                                option(value='snowboard') Snowboard
                                                option(value='boots') Boots
                                                option(value='poles') Poles
                                    .col-md-6
                                        .form-label-group
                                            input#upc.form-control(type='text' placeholder='UPC' required=true name='upc')
                                            label(for='upc') UPC
                            .form-group
                                .form-row
                                    .col-md-4
                                        .form-label-group
                                            input#size.form-control(type='text' placeholder='Size' required=true name='size')
                                            label(for='size') Size
                                    .col-md-4
                                        .form-label-group
                                            input#last_tune.form-control(type="date" placeholder="YYYY-MM-DD" pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}" name='last_tune')
                                            label(for='last_tune') Last Tune
                                    .col-md-4
                                        .form-label-group
                                            input#last_used.form-control(type="date" placeholder="YYYY-MM-DD" pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}" name='last_used')
                                            label(for='last_used') Last Used
                            .form-group
                                .form-label-group
                                    textarea#note.form-control(name='note' rows='5' placeholder='Notes...')
                            .modal-footer
                                button.btn.btn-secondary(type='button' data-dismiss='modal') Close
                                button.btn.btn-primary(type='submit') Save changes
block scripts
    script(src='/vendor/datatables/jquery.dataTables.min.js')
    script(src='/vendor/datatables/dataTables.bootstrap4.min.js')
    script(src="/js/datatables.js")